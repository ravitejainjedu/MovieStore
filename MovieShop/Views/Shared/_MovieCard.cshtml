@model ApplicationCore.Models.MovieCardModel
<div class="card h-100 shadow-sm">
  <img src="@Model.PosterUrl" class="card-img-top" alt="@Model.Title" />
  <div class="card-body d-flex flex-column">
    <h6 class="card-title">@Model.Title</h6>
    <a class="btn btn-primary mt-auto" href="/Movies/Details/@Model.Id">Details</a>
  </div>
</div>
