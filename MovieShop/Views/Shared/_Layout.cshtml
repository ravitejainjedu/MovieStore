@using Microsoft.AspNetCore.Authentication.Cookies
@using System.Security.Claims
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]MovieShop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-dark bg-dark navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">MovieShop</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        @await Component.InvokeAsync("Genres")   <!-- your Genres VC -->
                    </li>
                </ul>

                <form class="d-flex ms-auto" action="/search" method="get" role="search">
                    <input class="form-control me-2" type="search"
                           name="q"
                           placeholder="Search movies…"
                           value="@(Context.Request.Query["q"])"
                           aria-label="Search">
                    <button class="btn btn-outline-light" type="submit">Search</button>
                </form>


                <ul class="navbar-nav ms-auto">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown me-2">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Admin</a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="TopMovies">Top Movies</a></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="CreateMovie">Create Movie</a></li>
                                </ul>
                            </li>
                        }

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">@User.Identity!.Name</a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" asp-controller="Movies" asp-action="Index">Movies</a></li>
                                <li><a class="dropdown-item" asp-controller="User" asp-action="Favorites">Favorites</a></li>
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">Account</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="px-3">
                                        <button type="submit" class="btn btn-link p-0">Log Out</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item me-2"><a class="btn btn-outline-light" asp-controller="Account" asp-action="Login">Login</a></li>
                        <li class="nav-item"><a class="btn btn-primary" asp-controller="Account" asp-action="Register">Register</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="container py-4">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
