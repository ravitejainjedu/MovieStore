@model ApplicationCore.Models.MovieDetailsModel
@{
    Layout = "_Layout";
    // Use locals for clean markup
    var price = (decimal)(ViewBag.Price ?? 9.99m);
    var purchased = Model.IsPurchased;
}

<style>
    .action-card .card-body {
        padding: 1rem;
    }

    .action-card .btn {
        padding: .5rem .75rem;
        font-size: .95rem;
    }
</style>

@if (TempData["Success"] is string ok)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @ok <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] is string err)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @err <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<h2 class="mb-3">@Model.Title</h2>

<div class="row g-4">
    <!-- Poster -->
    <div class="col-md-4">
        <img class="img-fluid rounded shadow" src="@Model.PosterUrl" alt="@Model.Title" />
    </div>

    <!-- Overview -->
    <div class="col-md-5">
        <h3>@Model.Title</h3>
        <div class="mb-2">
            @foreach (var g in Model.Genres)
            {
                <span class="badge text-bg-secondary me-1">@g</span>
            }
        </div>
        <div class="mb-2 d-flex gap-2 flex-wrap">
            @if (Model.ReleaseDate.HasValue)
            {
                <span class="badge text-bg-light border">Release: @Model.ReleaseDate?.ToString("MMM dd, yyyy")</span>
            }
            @if (Model.RunTime.HasValue)
            {
                <span class="badge text-bg-light border">Run Time: @Model.RunTime min</span>
            }
            @if (Model.Revenue.HasValue)
            {
                <span class="badge text-bg-info">Box Office: @Model.Revenue?.ToString("C")</span>
            }
        </div>
        <p>@Model.Overview</p>
    </div>

    <!-- Actions -->
    <div class="col-md-3">
        <div class="card shadow-sm action-card">
            <div class="card-body d-grid gap-2">
                @if (purchased)
                {
                    <a class="btn btn-success w-100" href="@Url.Action("Watch", "Movies", new { id = Model.Id })">
                        Watch Movie
                    </a>
                }
                else
                {
                    <button class="btn btn-success w-100" data-bs-toggle="modal" data-bs-target="#buyModal">
                        Buy Movie
                    </button>
                }

                <!-- Review is always visible -->
                <button class="btn btn-outline-primary w-100" data-bs-toggle="modal" data-bs-target="#reviewModal">
                    Review
                </button>
            </div>
        </div>
    </div>
</div>

<hr class="my-4" />

<div class="row g-4">
    <div class="col-md-6">
        <h4>Movie Facts</h4>
        <ul class="list-group mb-3">
            @if (Model.ReleaseDate.HasValue)
            {
                <li class="list-group-item d-flex justify-content-between"><span>Release Date</span><span>@Model.ReleaseDate?.ToString("MMM dd, yyyy")</span></li>
            }
            @if (Model.RunTime.HasValue)
            {
                <li class="list-group-item d-flex justify-content-between"><span>Run Time</span><span>@Model.RunTime min</span></li>
            }
            @if (Model.Revenue.HasValue)
            {
                <li class="list-group-item d-flex justify-content-between"><span>Box Office</span><span>@Model.Revenue?.ToString("C")</span></li>
            }
        </ul>

        <h5>Trailers</h5>
        <div class="list-group">
            @foreach (var t in Model.Trailers)
            {
                <a class="list-group-item list-group-item-action" href="@t.url" target="_blank">@t.name</a>
            }
        </div>
    </div>

    <div class="col-md-6">
        <h4>Cast</h4>
        <div class="list-group">
            @foreach (var c in Model.Casts)
            {
                <a class="list-group-item list-group-item-action d-flex align-items-center" href="/Cast/Details/@c.castId">
                    <img src="@c.profilePath" alt="@c.castName" class="rounded me-3" style="width:48px;height:48px;object-fit:cover;" />
                    <div>
                        <div>@c.castName</div>
                        <small class="text-muted">@c.character</small>
                    </div>
                </a>
            }
        </div>
    </div>
</div>

<!-- Buy Modal -->
<div class="modal fade" id="buyModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Purchase</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <form asp-action="Purchase" asp-controller="Movies" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="movieId" value="@Model.Id" />
                <input type="hidden" name="price" value="@price" />

                <div class="modal-body">
                    Buy <strong>@Model.Title</strong> for <strong>@price.ToString("C")</strong>?
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success btn-sm">Purchase</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Review Modal -->
<div class="modal fade" id="reviewModal" tabindex="-1" aria-labelledby="reviewModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="reviewModalLabel">Submit Review</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="rating" class="form-label">Rating</label>
                        <select id="rating" class="form-select">
                            @for (int i = 1; i <= 10; i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="reviewText" class="form-label">Review</label>
                        <textarea id="reviewText" class="form-control" rows="4" placeholder="Write your thoughts..."></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </div>
</div>
